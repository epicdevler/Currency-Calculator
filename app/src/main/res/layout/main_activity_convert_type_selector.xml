<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_main">

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/convertFrom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selection_background"
        android:entries="@array/currencyTypes"
        android:padding="16dp"
        app:layout_constraintEnd_toStartOf="@id/selectionDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/selectionDivider"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="@id/convertFrom"
        app:layout_constraintEnd_toEndOf="@id/convertTo"
        app:layout_constraintStart_toEndOf="@id/convertFrom"
        app:layout_constraintTop_toTopOf="@id/convertFrom"
        app:srcCompat="@drawable/ic_cc_swap" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/convertTo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/selection_background"
        android:entries="@array/currencyTypes"
        app:layout_constraintBottom_toBottomOf="@id/convertFrom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/selectionDivider"
        app:layout_constraintTop_toTopOf="@id/convertFrom" />

</androidx.constraintlayout.widget.ConstraintLayout>